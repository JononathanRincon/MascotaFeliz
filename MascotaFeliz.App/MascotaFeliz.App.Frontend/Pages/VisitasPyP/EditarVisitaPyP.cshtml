@page
@model MascotaFeliz.App.Frontend.Pages.EditarVisitaPyPModel
@{
 int visitaPyPId = Model.visitaPyP.Id;
}
<h1 class="heading" style="text-align: center">Registrar y Actualizar visita</h1>
<div class="one_quarter">

    <p class="nospace btmspace-15" style="    text-align: center;">Por favor digite datos de la visita</p>
    <form class="form-group" method="post" style=" width: 25%; margin: 45px 400px -29px 86px; position: absolute; ">
        <fieldset>

            <input type="hidden" asp-for = "visitaPyP.Id" />
            <input asp-for="visitaPyP.FechaVisita" class="btmspace-15 form-control"
                style=" background-color:#454d65; border-radius:10px;  width:100%; color: #cbb8b8" type="text"
                placeholder="Fecha de la visita" asp-for="visitaPyP.FechaVisita">
            <br>
            <input  class="btmspace-15 form-control"
                style=" background-color:#454d65; border-radius:10px;  width:100%; color: #cbb8b8" type="number"
                placeholder="Temperatura" asp-for="visitaPyP.Temperatura" >
            <br>
            <input  class="btmspace-15 form-control"
                style=" background-color:#454d65; border-radius:10px;  width:100%; color: #cbb8b8" type="text"
                placeholder="Peso" asp-for="visitaPyP.Peso">
            <br>
            <input  class="btmspace-15 form-control"
                style=" background-color:#454d65; border-radius:10px;  width:100%; color: #cbb8b8" type="text"
                placeholder="FrecuenciaRespiratoria" asp-for="visitaPyP.FrecuenciaRespiratoria">
            
            <br>
            <input  class="btmspace-15 form-control"
                style=" background-color:#454d65; border-radius:10px;  width:100%; color: #cbb8b8" type="text"
                placeholder="FrecuenciaCardiaca" asp-for="visitaPyP.FrecuenciaCardiaca">
           
                    <br>
            <input  class="btmspace-15 form-control"
                style=" background-color:#454d65; border-radius:10px;  width:100%; color: #cbb8b8" type="text"
                placeholder="EstadoAnimo" asp-for="visitaPyP.EstadoAnimo">
        
            <br>
            <input  class="btmspace-15 form-control"
                style=" background-color:#454d65; border-radius:10px;  width:100%; color: #cbb8b8" type="text"
                placeholder="IdVeterinario" asp-for="visitaPyP.IdVeterinario">
         
            <br>
            <input  class="btmspace-15 form-control"
                style=" background-color:#454d65; border-radius:10px;  width:100%; color: #cbb8b8" type="text"
                placeholder="Recomendaciones" asp-for="visitaPyP.Recomendaciones">
                    
            <br>
            <button class="btn btn-primary" height="40px" type="submit">Guardar</button>
        
        </fieldset>
        <br>
        <a asp-page="./ListaVisitasPyP" class="btn-default">Lista de visitas</a>
    </form>

    <div class="one_quarter last">
        <img style="margin-top: 0%;     margin-left: 52%" src="~/images/dogcat1.png" alt="">
    </div>
</div>


